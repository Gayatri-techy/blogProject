<%- include('partials/header', { title: 'Home', user: user }) %>

<!-- Hero Section -->
<div
  class="hero-section text-center d-flex align-items-center justify-content-center vh-100 text-white"
  style="
    background-color: white;
    background-size: cover;
    background-position: center;
    position: relative;
  "
>
  <div
    style="
      background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.2)),
        url(https://cdn.pixabay.com/photo/2023/03/31/18/44/mountains-7890734_1280.jpg);
      border-radius: 10px;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    "
  ></div>
  <div class="container" style="position: relative">
    <h1 class="display-3 font-weight-bold mb-4">Discover. Travel. Share.</h1>
    <p class="lead mb-4">
      Explore iconic landmarks around the world. Share your own adventures and
      inspire the community to journey further.
    </p>
    <% if (user) { %>
    <p class="mb-4" style="color: black; font-size: 23px;">
      Hello,
      <span class="username font-weight-bold" style="color: rgb(108, 63, 63); font-size: 28px;"><%= user.username %>!</span>
    </p>
    <a
      class="btn btn-lg mr-2 text-white bg-dark"
      href="/user/profile"
      ><i class="fas fa-user"></i> Go to your profile</a
    >
    <% } else { %>
    <p class="mb-4">
      Please
      <a
        class="btn btn btn-lg mr-2"
        href="/auth/login"
        style="background-color: white"
        ><i class="fas fa-sign-in-alt"></i> Sign In</a
      >
      or
      <a class="btn btn-warning btn-lg" href="/auth/register"> Sign Up</a>
      to continue.
    </p>
    <% } %>
  </div>
</div>
<!-- Section -->
<section style="background: #f8f9fa; padding: 60px 0;">
  <div style="width: 90%; max-width: 1200px; margin: 0 auto; display: flex; flex-wrap: wrap; align-items: center; gap: 30px;">
    
    <!-- Left Side: Text + CTA -->
    <div style="flex: 1 1 45%; min-width: 300px;">
      <h2 style="
        font-weight: bold;
        font-size: 2.5rem;
        margin-bottom: 20px;
      ">
        Share Your Knowledge and Grow Your Audience
      </h2>
      <p style="font-size: 1.1rem; color: #555; margin-bottom: 20px;">
        Join our blogging community and publish your stories, tutorials, or tips. Reach thousands of readers, connect with like-minded writers, and enhance your online presence effortlessly.
      </p>
    </div>

    <!-- Right Side: Demo Post Cards -->
    <div style="flex: 1 1 45%; min-width: 300px; display: flex; flex-direction: column; gap: 20px;">
      
      <!-- Demo Post 1 -->
      <div style="
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s, box-shadow 0.3s;
      " onmouseover="this.style.transform='translateY(-5px)'; this.style.boxShadow='0 10px 20px rgba(0,0,0,0.15)';" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 5px 15px rgba(0,0,0,0.1)';">
        <img src="https://cdn.pixabay.com/photo/2018/04/21/10/49/blogger-3338181_1280.jpg" alt="Demo Post" style="width: 100%; display: block; min-width: 250px; height: 250px; object-fit: cover;">
        <div style="padding: 15px;">
          <p style="color: #555; margin: 0;">Share your story, inspire the world, and let your words reach thousands of readers.</p>
        </div>
      </div>

    </div>

  </div>
</section>


<!-- Features Section -->
<div class="container-fluid mt-5">
  <h1 class="text-center font-weight-bold mb-4">Application Features</h1>
  <div class="row">
    <div class="col-md-4">
      <div class="card text-center shadow-sm bg-dark text-white h-100">
        <div class="card-body">
          <i class="fas fa-lock fa-3x mb-3" style="color: #ff6f61"></i>
          <h3 class="card-title">Authentication</h3>
          <p class="card-text">
            Securely access your account with our robust authentication system.
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card text-center shadow-sm">
        <div class="card-body">
          <i class="fas fa-user-shield fa-3x mb-3" style="color: #6a4c93"></i>
          <h3 class="card-title">Authorization</h3>
          <p class="card-text">
            Control who has access to different parts of the site.
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card text-center shadow-sm bg-dark text-white h-100">
        <div class="card-body">
          <i class="fas fa-sign-in-alt fa-3x mb-3" style="color: #ffa600"></i>
          <h3 class="card-title">Login</h3>
          <p class="card-text">
            Quick and easy login process for returning users.
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-4">
      <div class="card text-center shadow-sm">
        <div class="card-body">
          <i class="fas fa-sign-out-alt fa-3x mb-3" style="color: #ff6f61"></i>
          <h3 class="card-title">Logout</h3>
          <p class="card-text">
            Securely log out of your account to protect your data.
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card text-center shadow-sm bg-dark text-white h-100">
        <div class="card-body">
          <i class="fas fa-comments fa-3x mb-3" style="color: #6a4c93"></i>
          <h3 class="card-title">Comments</h3>
          <p class="card-text">
            Engage with the community by leaving comments on posts.
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card text-center shadow-sm">
        <div class="card-body">
          <i class="fas fa-upload fa-3x mb-3" style="color: #ffa600"></i>
          <h3 class="card-title">Multiple File Uploads</h3>
          <p class="card-text">
            Easily upload multiple files with our intuitive interface.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>



<%- include('partials/footer') %>
